{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Replication Dataset Configuration",
	"description": "Schema for dataset files",
	"type": "object",
	"properties": {
		"id": {
			"type": "string",
            "description": "Dataset unique identifier, to be used in other tasks ???is this the id for other tasks???",
			"examples": ["orders", "customers", "customers_final"]
		},
		"name": {
			"type": "string",
			"description": "Dataset Display name   ???can it be fetched? is it mandatory?",
			"examples": ["Orders", "Customers", "Customers Final"]
		},
		"description": {
			"type": "string",
			"description": "Dataset description",
			"examples": [""]
		},
		"type": {
			"type": "string",
			"description": "Task type ???why do we need it here???",
			"examples": ["LANDING"]
		},
		"inputDatasets": {
			"type": "array",
			"description": "List of input datasets for this dataset. In this task type, only one object should be present",
			"items": {
				"type": "object",
				"description": "Input dataset item",
				"properties": {
					"type": {
						"type": "string",
						"description": "Source dataset data object type",
						"examples": ["TABLE", "VIEW"]
					},
					"datasetId": {
						"type": "string",
						"description": "Source dataset ID ???is it? what is $replicate$ ???",
						"examples": ["$replicate$dbo_orders", "$replicate$dbo_customers"]
					},
					"name": {
						"type": "string",
						"description": "Source dataset Name",
						"examples": ["Orders", "Customers"]
					},
					"projectId": {
						"type": "string",
						"description": "Source dataset project ID, recommended to use reference like ref{project.current.projectId}",
						"examples": ["{{ref(project.current.projectId)}}"]
					},
					"taskId": {
						"type": "string",
						"description": "Source dataset task ID",
						"examples": ["replication-fbwa"]
					},
					"schema": {
						"type": "string",
						"description": "Source dataset schema name, recommended to use variable",
						"examples": ["{{task.replication-fbwa:null$_$dbo.schema}}"]
					}
				},
				"required": [],
				"additionalProperties": false
			}
		},
		"virtualDataset": {
			"type": "boolean",
			"description": "Indicates if this is a virtual dataset",
			"enum": [true, false]
		}
	},
	"required": ["name"],
	"additionalProperties": false
}
